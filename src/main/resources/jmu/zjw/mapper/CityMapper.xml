<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jmu.zjw.mapper.CityMapper">
    <select id="findCityById" parameterType="int" resultType="jmu.zjw.po.City">
        select * from City where cId = (select cId from Airport where apId = #{apId})
    </select>

    <select id="findCityByapName" parameterType="String" resultType="jmu.zjw.po.City">
        select * from City where cId = (select cId from Airport where apName = #{apName})
    </select>

    <select id="findCityByName" parameterType="String" resultType="jmu.zjw.po.City">
        select * from City where cName = #{cName}
    </select>
</mapper>